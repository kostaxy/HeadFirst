<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".SendActivity">


    <EditText
        android:id="@+id/message_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="@string/message_hint" />
    <Button
        android:id="@+id/send_button"
        android:layout_below="@id/message_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_message_activity"
        android:onClick="sendMessageToActivity"/>
    <Button
        android:id="@+id/send_all_button"
        android:layout_below="@id/send_button"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_message_all"
        android:onClick="sendMessageToAnotherApp"/>




</RelativeLayout>